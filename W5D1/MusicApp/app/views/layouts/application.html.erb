<!DOCTYPE html>
<html>
  <head>
    <title>MusicApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <div class="content">


      <%= render 'shared/errors' %>
      <header>
        <h1 class="main-logo">Music App</h1>
        <div class="top">
          <div class="">
            <%= button_to "Home", bands_url, method: "get" %>
          </div>
          <div class="">
            <% logged_in? ? action = :log_in : action = :sign_up%>
            <%= render 'shared/header_buttons', action: action %>
          </div>
        </div>

      </header>

      <div class="main-content">
        <%= yield %>
      </div>

    </div>
  </body>
</html>
